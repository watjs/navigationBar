{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["**/*.test.js", "src/index.js", "src/reportWebVitals.js"],
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "eqeqeq": ["warn", "smart"],
    "no-debugger": "warn",
    "react/no-children-prop": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "react/jsx-key": "warn",
    "no-empty": "warn",
    "prefer-const": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}